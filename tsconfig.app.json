{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.apiUrls.ts",
    "vite.config.ts",
    "src/views/**/*.ts",
    "src/components/**/*.ts",
    "src/**/*.types.ts",
    "src/types/InsuranceCase.ts",
    "src/mockData.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
